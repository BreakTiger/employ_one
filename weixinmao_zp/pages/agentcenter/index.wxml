<!--weixinmao_hssy/pages/user/index.wxml-->
<view class="container">



   <view class="header" style=' background:linear-gradient(to right,#ff553c,#f57562);'>
         <view>
                  <view class="pic" >
                  
                    <image src="{{agentinfo.logo}}"></image>
                              <view class="userinfo">
                              
                              <view>{{agentinfo.name}}</view>
                              
                                <view>经纪人</view>
                                </view>

                  </view>

            

  
      </view>
   
</view>


<view class="service">


     <view class="servicelist"   bindtap='toMytask' style='background:#DA70D6;'>
        <view class="logo">
          <image src="../../resource/images/fx.png"  />  

        </view>
        <view class="name" >
            <view>我的任务</view>
            <view></view>
        </view>
    </view>



     <view class="servicelist"   bindtap='toMymoneyjob' style='background:#2de09f;'>
        <view class="logo">
          <image src="../../resource/images/fx.png"  />  

        </view>
        <view class="name" >
            <view>悬赏任务</view>
            <view></view>
        </view>
    </view>

    <view class="servicelist"   bindtap='toAgentnotelist' id="{{item.id}}">
        <view class="logo">
          <image src="../../resource/images/qj.png"  />  

        </view>
        <view class="name" >
            <view>{{title[0]}}</view>
            <view>{{agent_setting.notemoney}}元/份</view>
        </view>
    </view>



    <view class="servicelist"   bindtap='toAgentcompanylist' style='background: #ff553c;'>
        <view class="logo">
          <image src="../../resource/images/tz.png"  />  

        </view>
        <view class="name">
            <view>推荐企业</view>
            <view>{{agent_setting.companymoney}}元/份</view>
        </view>
    </view>

  <view class="servicelist"   bindtap='toFxrecord' style='background:#FFD700;'>
        <view class="logo">
          <image src="../../resource/images/fx.png"  />  

        </view>
        <view class="name" >
            <view>推广记录</view>
            <view>推荐有奖</view>
        </view>
    </view>



    <view class="servicelist"   bindtap='toAgentqrcode' id="{{item.id}}" style='background: #DA70D6;'>
        <view class="logo">
          <image src="../../resource/images/tzhi.png"  />  

        </view>
        <view class="name">
            <view>推广二维码</view>
            <view></view>
        </view>
    </view>


    <view class="servicelist"   bindtap='toMyteam'  style='background: #ff553c;'>
        <view class="logo">
          <image src="../../resource/images/tzhi.png"  />  

        </view>
        <view class="name">
            <view>我的团队</view>
            <view></view>
        </view>
    </view>
    





</view>











 
</view>



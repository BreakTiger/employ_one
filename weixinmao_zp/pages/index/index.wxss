/* 优秀人才 */
.news {
  height: 80rpx;
  font-size: .7rem;
  margin-top: 10rpx;
  border-bottom: 1rpx solid #efefef;
  padding: 0 30rpx;
}

.news view:nth-child(1) {
  position: relative;
}

.news view:nth-child(1)::before {
  content: "";
  position: absolute;
  width: 6rpx;
  height: 40rpx;
  background: #3274e5;
  top: 0rpx;
  left: -15rpx;
}

.type-box{
  width: 690rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #efefef;
}

.type-box>image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.type-info{
  width: 80%;
}
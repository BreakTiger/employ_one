.container {
  min-height: 100%;
}

/* 搜索框 */
.header {
  width: 750rpx;
  padding: 40rpx 0;
  background: #3274e5;
}

.header>view {
  width: 680rpx;
  height: 80rpx;
  border-radius: 5rpx;
}

.search icon {
  margin: 0 18rpx;
}

.search view {
  color: #a6a6a6;
  font-size: .7rem;
  border-left: 4rpx solid #a6a6a6;
  text-indent: 8rpx;
}

/* 轮播图 */
.swiper-container {
  width: 750rpx;
  position: relative;
}

.swiper_box {
  width: 100%;
}

swiper-item image {
  width: 100%;
  display: inline-block;
  overflow: hidden;
}

/* 指示点 */
.swiper-container .dots {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 20rpx;
}

.dots .dot {
  margin: 0 8rpx;
  width: 14rpx;
  height: 14rpx;
  background: #fff;
  border-radius: 50%;
  transition: all .6s;
  opacity: .5;
}

.swiper-container .dots .dot.active {
  width: 14rpx;
  opacity: 1;
}

/* 统计 */
.tongji {
  width: 750rpx;
  padding-top: 20rpx;
  margin-top: 10rpx;
  font-size: .8rem;
  color: #3e3e3e;
}

.tongji view:nth-child(1) {
  margin-left: 55rpx;
}

.tongji>view {
  margin-left: 30rpx;
}

.tongji text {
  color: red;
}

.tongji image {
  width: 35rpx;
  height: 35rpx;
}

/* 分类导航 */
.navlist {
  width: 750rpx;
  padding: 20rpx 0;
}

.navlist .item {
  width: 180rpx;
  font-size: .7rem;
  padding-bottom: 30rpx;
}

.navlist .item image {
  width: 120rpx;
  height: 120rpx;
}

/* 发布职位 */
.release {
  width: 680rpx;
  height: 80rpx;
  background: #75aac9;
  font-size: .7rem;
  color: #fff;
  margin: 10rpx auto;
  border-radius: 5rpx;
}





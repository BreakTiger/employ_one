page {
  background-color: #f5f5f5;
}

.container>view{
  width: 100%;
}

.header {
  height: 250rpx;
  background: #3274e5;
}

.header>image {
  width: 140rpx;
  height: 140rpx;
  border: 8rpx solid #FFF;
  margin: 15rpx 0;
  border-radius: 140rpx;
}

.header>view {
  color: #FFF;
  font-size: .8rem;
}

/* 计数 */
.mymoney {
  width: 750rpx;
  font-size: .8rem;
  position: relative;
}

.mymoney::before {
  content: '';
  position: absolute;
  width: 4rpx;
  height: 80rpx;
  background: #efefef;
  top: 18rpx;
  left: calc((750 - 4) / 2);
}

.mymoney .item view:nth-child(1) {
  color: #1aad19;
}

.item {
  padding: 20rpx 0;
}


/* 入口列表 */
.list {
  width: 750rpx;
  margin-top: 20rpx;
}

.list .item {
  padding: 25rpx 0;
  font-size: .9rem;
  border-bottom: 1rpx solid #efefef;
  padding-left: 30rpx;
  color: #747474;
  display: flex;
  flex-direction: row;
}

.icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}


.count {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background: red;
  border-radius: 50%;
  margin-right: 20rpx;
}




.weixinmao-msg {
  position: absolute;
  top: 0%;
  left: 0%;
  width: 100%;
  height: 100%;
  background-color: black;
  z-index: 2001;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  flex-direction: row;
  justify-content: center;


}

.weixinmao-content {
  width: 600rpx;
  height: 450rpx;
  z-index: 4001;
  background: #FFF;
  align-self: center;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;

}

.weixinmao-content .title {
  border-bottom: 1rpx solid #e5e5e5;
  width: 100%;
  text-align: center;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  font-size: .8rem;
  background: #3274e5;
  color: #FFF;
  display: flex;
  flex-direction: row;
  justify-content: space-between;


}

.weixinmao-content .title view:nth-child(1) {

  width: 30%;

}

.weixinmao-content .title view:nth-child(2) {
  width: 40%;
}

.weixinmao-content .title view:nth-child(3) {
  width: 30%;
}

.weixinmao-content .content {
  display: flex;
  flex-direction: column;
  width: 100%;
  justify-content: center;
  margin-top: 20rpx;

}

.weixinmao-content .content .item {

  font-size: .8rem;
  width: 100%;
  align-self: center;
  margin-bottom: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;

}

.inputlist {
  border: 1rpx solid #efefef;

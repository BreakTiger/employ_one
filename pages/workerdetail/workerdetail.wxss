.b-60 {
  background: #3F4160;
}

.container>view {
  width: 100%;

}

.base {
  color: #fff;
  padding: 35rpx 0;
}

.base>image {
  width: 85rpx;
  height: 104rpx;
  background: #fff;
  margin: 0 25rpx;
}

.icon {
  width: 20rpx;
  height: 20rpx;
  margin-right: 10rpx;
}

.b-f5 {
  background: #f5f5f5;
}

.info {
  border-bottom: 1rpx solid #666;
  padding: 35rpx 0;
}

.info>view {
  width: 95%;
}

.title {
  color: #818ba3;
  font-weight: bold;
  font-size: 20rpx;
  margin-bottom: 10rpx;
}

.info view {
  font-size: 16rpx;
}

.container>view:last-child {
  border: none;
}

.btn {
  width: 100%;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  border-top: 1rpx solid #f5f5f5;
}

.btn>view {
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: .7rem;
  text-align: center;
}

.btn>view:last-child {
  color: #fff;
}
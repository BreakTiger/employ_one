.top {
  width: 100%;
  padding: 25rpx 0;
}

.search {
  width: 80%;
  height: 80rpx;
  border-radius: 50rpx;
  border: 1rpx solid #f5f5f5;
  background: rgba(0, 0, 0, 0.2);
  font-size: 28rpx;
}

input {
  width: 90%;
  color: #fff;
}


.condition {
  width: 90%;
}

.condition>view {
  width: 100%;
  padding: 35rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
}

.btn {
  width: 90% !important;
  height: 80rpx !important;
  line-height: 80rpx;
  padding: 0rpx !important;
  font-size: 28rpx;
  margin-top: 40rpx;
}

.name {
  width: 30%;
}

.setting {
  width: 70%;
}

.arrow {
  width: 25rpx;
  height: 25rpx;
  margin-left: 20rpx;
}
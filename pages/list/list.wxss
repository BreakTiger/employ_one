page {
  background-size: 100% 100%;
  height: 100%;
  font-size: 32rpx;
  font-family: "微软雅黑", "方正黑体";
  color: #333;
}

.newstitle {
  width: 750rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin-left: 20rpx;
  font-size: 28rpx;
  border-bottom: 1rpx solid #efefef;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  align-content: center;

}

.newstitle view:nth-child(1) {
  height: 40rpx;
  line-height: 40rpx;
  width: 6rpx;
  background: #3274e5;
  align-self: center;
  margin-left: 10rpx;
}

.newstitle view:nth-child(2) {
  height: 80rpx;
  line-height: 80rpx;
  width: 150rpx;
  padding-left: 15rpx;
}

.newslist {
  width: 720rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx 0;
}

.newslist .title {
  width: 100%;
  flex-direction: column;
  display: flex;
  justify-content: space-between;
}

.newslist .title .detail {
  padding-left: 2%;
  text-align: left;
  font-size: 28rpx;
  color: #000;
  display: flex;
  flex-direction: row;
  width: 100%;
}

.newslist .title .detail .pic {
  width: 20%;
  display: flex;
  align-items: center;
}

.newslist .title .detail .pic image {
  width: 120rpx;
  height: 120rpx;
  align-self: center;
  border-radius: 60rpx;
}

.newslist .title .detail .info {
  width: 75%;
}

.newslist .title .detail .info view:nth-child(1) {
  padding-top: 10rpx;
  color: #646464;
  font-weight: bold;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.newslist .title .detail .info view:nth-child(2) {
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  color: #646464;
  font-size: 28rpx;
}

.newslist .title .detail view:nth-child(3) {
  padding-top: 10rpx;
  font-weight: bold;
  font-size: 28rpx;
  padding-right: 10rpx;
}

.newslist .title .price {
  width: 28%;
}

.newslist .title .price .money {
  color: #d65408;
  font-weight: bold;
  font-size: 28rpx;
  padding-right: 10rpx;
}

.jobname>text {
  color: #b7b7b7;

}

.jobmoney {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  color: #646464;
}

.jobmoney>view:nth-child(2) {
  width: 106rpx;
  height: 30rpx;
  line-height: 30rpx;
  color: #00FF00 !important;
  border: 1rpx solid #00FF00;
  border-radius: 3rpx;
  text-align: center;
  font-size: 20rpx !important;
}

.jobmoney text:nth-child(2) {
  font-weight: 600;
  color: #ff4129;
}

.info .time {
  color: #646464;
  font-size: 28rpx;
}

.jtypes {
  width: 106rpx;
  height: 30rpx;
  line-height: 30rpx;
  color: rgb(253, 209, 162) !important;
  border: 1rpx solid rgb(253, 209, 162);
  border-radius: 3rpx;
  text-align: center;
  font-size: 20rpx !important;
  padding: 0 !important;
}
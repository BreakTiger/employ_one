page {
  background: #f5f5f5;
}

.main {
  width: 100%;
}

.title {
  background: #f5f5f5;
  padding: 15rpx 0 15rpx 15rpx;
}

.item {
  width: 95%;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.name {
  width: 20%;
  font-size: .8rem;
}

.selectitem {
  width: 80%;
  display: flex;
  color: #808080;
  font-size: .8rem;
}

.selectitem>input,
.selectitem>picker {
  flex: 1;
}

.checkitem {
  width: calc(100% / 3);
  margin: 15rpx 0;
  font-size: 0.7rem;
}

.footer {
  width: 100% !important;
  height: 88rpx !important;
  padding: 0rpx !important;
  line-height: 88rpx;
  color: #fff;
  font-size: .7rem;
}
@import '../../wxParse/wxParse.wxss';

.header {
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.pic {
  width: 380rpx;
  height: 340rpx;
  align-self: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: -88rpx;
}

.pic image {
  width: 140rpx;
  height: 140rpx;
  border: 7rpx solid #FFF;
  border-radius: 140rpx;
}

.pic view {
  height: 60rpx;
  line-height: 60rpx;
  width: 380rpx;
  text-align: center;
  color: #000;
  font-size: 28rpx;
}

.container .order {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.container .order .title {
  font-size: 28rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  background: #FFF;
  margin-top: 20rpx;
  padding-left: 20rpx;
  border-bottom: 1rpx solid #efefef;
  font-weight: 600;
}

.container .order .content {
  display: flex;
  background: #FFF;
  padding: 20rpx;
  text-indent: 20rpx;
  font-size: 28rpx;
}

.container .list {
  width: 100%;
  background: #FFF;
}

.container .list .item {
  padding-top: 25rpx;
  padding-bottom: 25rpx;
  font-size: 28rpx;
  border-bottom: 1rpx solid #efefef;
  padding-left: 20rpx;
  color: #747474;
}


.btn {
  width: 100%;
  height: 90rpx;
  position: fixed;
  bottom: 0rpx;
}

.btn>view {
  width: calc(100% / 2);
  height: 100%;
  line-height: 90rpx;
  text-align: center;
}

.b-f5 {
  background: #f5f5f5;
}

.covers {
  width: 65%;
  height: 550rpx;
  margin-bottom: 100rpx;
  border-radius: 10rpx;
  z-index: 300;
}

.close {
  width: 80rpx;
  height: 80rpx;
}

.c_title {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}

.c_scroll {
  width: 100%;
  height: calc(100% - 80rpx);
}

.c_scroll_item {
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  margin: 10rpx auto;
  border-radius: 1rpx solid #f5f5f5;
}
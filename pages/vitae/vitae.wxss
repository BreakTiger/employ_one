@import '../../wxParse/wxParse.wxss';

.container {
  background-color: #FFF;
  min-height: 100%;
}

.container .header {
  width: 750rpx;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.pic {
  width: 380rpx;
  height: 350rpx;
  align-self: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  left: 200rpx;
  top: 40rpx;
}

.pic image {
  width: 140rpx;
  height: 140rpx;
  border: 7rpx solid #FFF;
  border-radius: 140rpx;
}

.pic view {
  height: 60rpx;
  line-height: 60rpx;
  width: 380rpx;
  text-align: center;
  color: #000;
  font-size: .8rem;
}

.container .order {
  width: 750rpx;
  display: flex;
  flex-direction: column;
}

.container .order .title {
  font-size: .8rem;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  background: #FFF;
  margin-top: 20rpx;
  padding-left: 20rpx;
  border-bottom: 1rpx solid #efefef;
  font-weight: 600;
}

.container .order .content {
  display: flex;
  background: #FFF;
  padding: 20rpx;
  text-indent: 20rpx;
  font-size: .8rem;
}

.container .list {
  width: 750rpx;
  background: #FFF;
}

.container .list .item {
  padding-top: 25rpx;
  padding-bottom: 25rpx;
  font-size: .8rem;
  border-bottom: 1rpx solid #efefef;
  padding-left: 20rpx;
  color: #747474;
}


.btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}
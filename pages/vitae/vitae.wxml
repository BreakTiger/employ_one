<view class="container">

	<view class="header" style="background:{{intro.maincolor}}"></view>


	<view class="pic">

		<image src="{{data.avatarUrl}}"></image>

		<view>{{data.name}}</view>

		<view>{{data.sex == 1? '男' : '女'}} {{data.age}}岁 {{data.express}} {{data.education}}</view>

	</view>

	<view class="order" style='margin-top:140rpx;'>
		
    <view class="title">简历信息</view>

		<view class="list">
			<view class="item">职位意向： {{data.jobtitle}}</view>
			<view class="item">出生年份： {{data.birthday}}</view>
			<view class="item">学历： {{data.education}}</view>
			<view class="item">工作经验： {{data.express}}</view>
			<view class="item">现居地址： {{data.address}}</view>
			<view class="item">目前状态： {{data.currentname}}</view>
			<view class="item">工作性质： {{data.worktype}}</view>
			<view class="item">期望行业： {{data.jobcatename}}</view>
			<view class="item">期望薪资： {{data.money}}</view>
			<view class="item">工作区域： {{data.areaname}}</view>
		</view>

	</view>

	<view class="order">

		<view class="title">联系方式</view>

		<view class="list" hidden='{{showcontact}}'>

			<view class="item" bindtap='doCall' data-tel="{{data.tel}}">联系电话 : {{data.tel}}</view>

		</view>

		<view class="list" hidden='{{!showcontact}}'><button bindtap='toSelectlook'>查看联系方式</button></view>
	
  </view>


	<view class="order">

		<view class="title">自我介绍及工作经历</view>
		
    <view class="content">

			<!-- <rich-text nodes="{{data.content}}"></rich-text> -->
			<!--
           <template is="wxParse" data="{{wxParseData:article.nodes}}"/>
           -->
		</view>

	</view>

</view>

<view class="container col fl-align">

		<view class="list-item flex col fl-align b-ff" wx:for="{{list}}" wx:key="index">

			<view style="font-weight:bold;">{{item.name}}</view>

			<view class="flex fl-align fl-jsb c-66" style="margin:20rpx 0;font-size:.7rem;">
				<text>{{item.gender}} | {{item.phone}}</text>
				<text>{{item.createTime}}</text>
			</view>

			<view class="btn flex fl-align fl-jfe">
				<view bindtap='toCancle' data-id="{{item.id}}">取消收藏</view>
				<view bindtap="toDetail" data-id="{{item.curriculumVitaeId}}" data-index="{{index}}">查看简历</view>
   				<!-- <view bindtap='toInvite' data-item="{{item}}">邀请面试</view> -->
			</view>

		</view>

		<view class="flex col fl-align" wx:if="{{list.length==0}}" style="margin-top:210rpx;">
   		<image src="../../images/empty.png" class="empty"></image>
   		<text class="c-98">您暂无收藏的简历</text>
   	</view>

		

   </view>
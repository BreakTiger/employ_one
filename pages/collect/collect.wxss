page {
  background-color: #f5f5f5;
}

.orderlist {
  width: 750rpx;
  margin-top: 10rpx;
}

.orderlist .orderid {
  border-bottom: 1rpx solid #efefef;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  padding-left: 20rpx;
  font-size: .8rem;
}

.orderlist .content {
  font-size: .8rem;
  border-bottom: 1rpx solid #efefef;
}

.orderlist .content .item {
  padding-top: 16rpx;
  padding-bottom: 16rpx;
  padding-left: 20rpx;
  border-bottom: 1rpx dotted #efefef;
  display: flex;
  flex-direction: row;
}

.container .orderlist .content .payitem {
  width: 750rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
}

.container .orderlist .content .payitem view {
  width: 180rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  margin-right: 20rpx;
  border-radius: 5rpx;
  background: #3274e5;
  font-size: .6rem;
  color: #FFF;

}

.container .orderlist .content .payitem view:nth-child(2) {
  background: #e64340;
}



.intro {
  padding: 10rpx;
  font-size: .8rem;
}
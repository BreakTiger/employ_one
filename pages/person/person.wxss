/* 搜索 */
.search {
	width: 92%;
	height: 100rpx;
	padding: 0 4%;
	border-bottom: 1rpx solid #ececec;
	position: fixed;
	top: 0;
	z-index: 99;
}

.search_box {
	flex: 1;
	height: 60rpx;
	background: #f7f7f7;
}

icon {
	margin: 0 15rpx;
}

/* 筛选栏 */
.list_sort {
	width: 100%;
	height: 64rpx;
	line-height: 64rpx;
	position: fixed;
	top: 0rpx;
	z-index: 99;
	font-size: 28rpx;
	border-bottom: 1rpx solid #f5f5f5;
	color: #333;
}

.sort_list {
	width: calc(100% / 3);
	text-align: center;
	border-right: 2rpx solid #ececec;
}

.sort_list:last-child {
	border-right: 0;
}

.sort_list image {
	width: 26rpx;
	height: 26rpx;
	vertical-align: middle;
}

.sort_list text {
	display: inline-block;
	width: 55%;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	vertical-align: bottom;
}

/* 触发样式 */
.select {
	border-bottom: 2rpx solid #e62129;
}

.select text {
	color: #e62129;
}

/* 区域 + 行业 + 学历 + 筛选*/
.select_cars,
.select_sort,
.select_price {
	position: fixed;
	top: 65rpx;
	z-index: 999;
	width: 92%;
	padding: 0 4%;
}

.select_cars text,
.select_sort text {
	display: block;
	flex: 1;
	line-height: 70rpx;
	font-size: 26rpx;
}

.select_cars text:last-child,
.select_sort text:last-child {
	border-bottom: 0;
}

/* 列表 */
.news {
	margin-top: 64rpx;
}

.select_cars_list {
	display: flex;
	align-items: center;
	border-bottom: 1rpx solid #ececec;
}

.select_cars_list image {
	width: 36rpx;
	height: 36rpx;
}

.sold {
	background: url(http://s2.nongjigou.com/images/sold.png) no-repeat right 0;
	background-size: 140rpx 140rpx;
}

.select_price .item {
	width: 100%;
}

.select_price .item .content {
	width: 100%;
	display: flex;
	flex-wrap: wrap;
	flex-direction: row;
}

.select_price .item .content text {
	padding: 5rpx 15rpx;
	line-height: 60rpx;
	margin: 12rpx 1.8%;
	border: 2rpx solid #acacac;
	border-radius: 4rpx;
	text-align: center;
	font-size: 26rpx;
}

.select_price .boractive {
	border: 2rpx solid #e62129;
	color: #e62129;
}



.news .newstitle {
	width: 750rpx;
	height: 80rpx;
	line-height: 80rpx;
	margin-left: 20rpx;
	font-size: 28rpx;
	border-bottom: 1rpx solid #efefef;
	margin: 0 auto;
	display: flex;
	flex-direction: row;
	align-content: center;
}

.news .newstitle view:nth-child(1) {
	height: 40rpx;
	line-height: 40rpx;
	width: 6rpx;
	background: #3274e5;
	align-self: center;
	margin-left: 10rpx;
}

.news .newstitle view:nth-child(2) {
	height: 80rpx;
	line-height: 80rpx;
	width: 150rpx;
	padding-left: 15rpx;
}


.news .newslist {
	display: flex;
	flex-direction: row;
	width: 98%;
	border-bottom: 2rpx solid #efefef;
	padding-top: 10rpx;
	padding-bottom: 10rpx;
}



.news .newslist .title {
	width: 100%;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}


.news .newslist .title .detail {
	text-align: left;
	font-size: 28rpx;
	color: #000;
	display: flex;
	flex-direction: row;
	width: 100%;
}

.news .newslist .title .detail .pic {
	width: 20%;
	display: flex;
	align-items: center;
}

.news .newslist .title .detail .pic image {
	width: 120rpx;
	height: 120rpx;
	align-self: center;
	border-radius: 60rpx;
}

.news .newslist .title .detail .info {
	width: 75%;
}

.news .newslist .title .detail .info view:nth-child(1) {
	padding-top: 10rpx;
	color: #646464;
	font-weight: bold;
	display: flex;
	flex-direction: row;
	justify-content: space-between;

}

.news .newslist .title .detail .info view:nth-child(2) {
	padding-top: 10rpx;
	padding-bottom: 10rpx;
	color: #646464;
	font-size: 28rpx;
}

.news .newslist .title .detail view:nth-child(3) {
	padding-top: 10rpx;
	font-weight: bold;
	font-size: 28rpx;
	padding-right: 10rpx;
}

.news .newslist .title .price {
	width: 28%;
}

.news .newslist .title .price .money {
	color: #d65408;
	font-weight: bold;
	font-size: 28rpx;
	padding-right: 10rpx;
}
page {
  height: 100%;
  color: #333;
}

.search {
  width: 92%;
  height: 50px;
  padding: 0 4%;
  border-bottom: 1px solid #ececec;
  position: fixed;
  top: 0;
  z-index: 99;
}

.search>view {
  height: 30px;
  background-color: #f7f7f7;
  margin-top: calc(50rpx - 30rpx);
}

icon {
  margin: 0 20rpx;
}

/* 列表 */
.recruit {
  margin-top: 10rpx;
  width: 750rpx;
  background: #FFF;
  display: flex;
  flex-direction: column;
}

.recruit .recruittitle {
  width: 750rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin-left: 20rpx;
  font-size: .7rem;
  border-bottom: 1rpx solid #efefef;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  align-content: center;
}

.recruit .recruit_header {
  border-bottom: 2rpx solid #ececec;
  font-size: 32rpx;
  font-weight: 600;
  padding: 40rpx 0rpx 10rpx 20rpx;
}

.recruit .recruittitle view:nth-child(1) {
  height: 40rpx;
  line-height: 40rpx;
  width: 6rpx;
  background: #3274e5;
  align-self: center;
  margin-left: 10rpx;
}

.recruit .recruittitle view:nth-child(2) {

  height: 80rpx;
  line-height: 80rpx;
  width: 150rpx;
  padding-left: 15rpx;

}

.recruit .recruitlist {
  display: flex;
  flex-direction: row;
  width: 100%;
  margin: 0 auto;
  border-bottom: 30rpx solid #efefef;
  padding: 10rpx 0rpx 10rpx 0;
}

.recruit .recruitlist .title {
  width: 100%;
  flex-direction: column;
  display: flex;
  justify-content: space-between;
}

.recruit .recruitlist .title .detail {
  padding: 0 2%;
  box-sizing: border-box;
  text-align: left;
  font-size: .8rem;
  color: #000;
  width: 100%;
}

.recruit .recruitlist .title .detail .type_list {
  display: flex;
  align-items: center;
  font-size: 24rpx;
}

.recruit .recruitlist .title .detail .recruit_state,
.recruit_button {
  border-radius: 10rpx;
  color: #fff;
  font-size: 20rpx;
  background: #33b6be;
  padding: 10rpx 17rpx
}

.recruit .recruitlist .title .detail .recruit_time {
  margin-left: 30rpx;
}

.recruit .recruitlist .title .detail image {
  width: 50rpx;
  height: 50rpx;
}

.recruit .recruitlist .title .detail .enterprise {
  margin-left: 10rpx;
}

.recruit .recruitlist .title .detail .recruit_button {
  padding: 17rpx 86rpx;
  font-size: 22rpx;
}


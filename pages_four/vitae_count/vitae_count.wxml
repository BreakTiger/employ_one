<view class="container col fl-align">

	<view class="list-item flex col fl-align b-ff" wx:for="{{list}}" wx:key="index" wx:if="{{list.length!=0}}">

		<view style="font-weight:bold;">{{item.postName}}</view>

		<view class="flex fl-align fl-jsb c-66" style="margin:20rpx 0;font-size:.7rem;">
			<view class="flex">
				<text wx:if="{{item.name}}">{{item.name}} |  </text>
				<text wx:if="{{item.gender}}"> {{item.gender}} | </text>
				<text wx:if="{{item.phone}}">{{item.phone}}</text>
			</view>
			<text>投递时间: {{item.submitResumeTime}}</text>
		</view>

		<view class="btn flex fl-align fl-jfe">
		  <view bindtap="toWatch" data-id="{{item.curriculumVitaeId}}">查看简历</view>
   			<view bindtap='toInvite' data-item="{{item}}">邀请面试</view>
			</view>
	  </view>

		<view class="flex col fl-align" wx:if="{{list.length==0}}" style="margin-top:210rpx;">
   		<image src="../../images/empty.png" class="empty"></image>
   		<text class="c-98">暂无简历记录</text>
   	</view>

</view>
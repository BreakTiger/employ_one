page {
  background: #f5f5f5;
}

.content {
  width: 100%;
  margin-bottom: 20rpx;
}

.content>view {
  width: 98%;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  font-size: .7rem;
}

.content>view:last-child {
  border: none;
}

.content>view>view {
  font-size: .7rem;
  margin-top: 20rpx;
}

.content>view>view>view {
  display: flex;
  align-items: center;
  width: calc(100% / 4);
}

icon {
  margin-right: 10rpx;
}

.btn {
  width: 85%;
}

.btn>view {
  width: 45%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 10rpx;
  text-align: center;
  font-size: .8rem;
}

.btn>view:first-child {
  color: #fff;
}

.btn>view:last-child {
  border: 1rpx solid #000;
}
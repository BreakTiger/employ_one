page {
  background: #FBFBFB;
}

.list-item {
  width: 730rpx;
  padding: 20rpx 0;
  border-radius: 10rpx;
  margin-top: 20rpx;
}

.list-item>view {
  width: 95%;
}


.btn>view {
  width: 130rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: .7rem;
  color: #666666;
  border: 1rpx solid #f5f5f5;
  border-radius: 10rpx;
  margin-left: 15rpx;
}

.addNew {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #FFF;
  font-size: .7rem;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
}
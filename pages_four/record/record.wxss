.type-box {
  width: 92%;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #efefef;
  font-size: 28rpx;
}

.header {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.type-info {
  width: 80%;
}

.type-info>view {
  padding-top: 10rpx;
}

.inform {
  background: #f5f5f5;
  padding: 20rpx 0;
  font-size:30rpx;
}

.inform>image {
  width: 40rpx;
  height: 40rpx;
  margin-left: 35rpx;
  margin-right: 15rpx;
}

.btn>view {
  width: 137rpx;
  height: 51rpx;
  line-height: 51rpx;
  border: 2rpx solid #F5F5F5;
  border-radius: 8rpx;
  text-align: center;
  font-size: 21rpx;
  color: #545454;
  margin-left: 15rpx;
}

.add{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 28rpx;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  margin: 0rpx !important;
  border-radius: 5rpx;
}

.content {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  position: relative;
  margin-bottom: 35rpx;
}

.content view{
  text-align: center;
  width: 50%;
}

.content .cursor {
  width: 50%;
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  transition: all 0.2s ease-in-out;
  -moz-transition: all 0.2s ease-in-out;
  -webkit-transition: all 0.2s ease-in-out;
}

.content .cursor::after {
  content: '';
  display: block;
  background-color: #439df8;
  height: 2rpx;
  width: 60%;
  margin: 0 auto;
}
.active {
  color: #3884FF;
}
.cursorss {
  transform: translateX(100%);
  -webkit-transform: translateX(100%);
  -moz-transform: translateX(100%);
}

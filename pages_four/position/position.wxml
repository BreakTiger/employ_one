   <view class="container">

   	<view class="orderlist">

   		<view class="content" wx:for="{{list}}" wx:key="index" wx:if="{{list.length!=0}}">

   			<view class="jobinfo">
   				<view class="jobleft">
   					<view>{{item.submitResumeTotal}}</view>
   					<view>投递简历</view>
   				</view>
   				<view class="line">
   				</view>

   				<view class="jobright">
   					<view class="jobtitle">
   						<view>{{item.postName}}</view>
   						<image src="../../images/edit.png" bindtap="toEdit" data-item="{{item}}" />
   					</view>
   					<view>人数:{{item.recruitment}} | 薪资:{{item.salary}}</view>

   					<view>创建:{{item.createTime}}</view>

   				</view>

   			</view>

   			<view class="payitem">

   				<!-- <view>置顶</view> -->

   				<view>匹配</view>

					<view wx:if="{{item.enable == -1}}" bindtap="isOpen" data-type="{{item.enable}}" data-index="{{index}}" data-id="{{item.id}}">关闭</view>

					<view wx:if="{{item.enable == 1}}" bindtap="isOpen" data-type="{{item.enable}}" data-index="{{index}}" data-id="{{item.id}}">开启</view>

   				<view bindtap="toDel" data-id="{{item.id}}" data-index="{{index}}">删除</view>

   			</view>

   		</view>

   	</view>
   </view>


   <view class="weixinmao-float">
   	<view class="weixinmao-foot">
   		<view class="footer" bindtap='addcompanyjob'>添加招聘职位</view>
   	</view>
   </view>

	 <view class="flex col fl-align" wx:if="{{list.length==0}}" style="margin-top:210rpx;">
   		<image src="../../images/empty.png" class="empty"></image>
   		<text class="c-98">暂无应聘职位</text>
   	</view>
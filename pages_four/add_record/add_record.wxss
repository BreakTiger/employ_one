page {
  background: #f5f5f5;
}

.container>view {
  width: 100%;
  font-size: 22rpx;
}

.title {
  text-indent: 25rpx;
  margin: 20rpx 0;
}

.content-line {
  width: 92%;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.content-line:last-child {
  border: none;
}

.content-line>text {
  width: 25%;
}

.content-line>view {
  width: 75%;
  color: #666;
}

icon {
  margin-right: 15rpx;
}

.img {
  min-height: 500rpx;
}

.photo {
  width: 160rpx;
  height: 160rpx;
  margin: 15rpx;
}

.save {
  width: 100% !important;
  height: 80rpx !important;
  line-height: 80rpx !important;
  margin: 0rpx !important;
  padding: 0rpx !important;
  text-align: center;
  font-size: 28rpx;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
}

.radio {
  margin-right: 35rpx;
}
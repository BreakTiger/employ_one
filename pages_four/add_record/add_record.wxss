page {
  background: #f5f5f5;
}

.title {
  margin: 20rpx
}

.content-line {
  width: 92%;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.content-line:last-child {
  border: none;
}

.content-line>text {
  width: 25%;
}

.content-line>input,
.content-line>view,
.content-line>picker {
  width: 75%;
}

icon {
  margin-right: 15rpx;
}

.img {
  min-height: 500rpx;
}

.photo {
  width: 160rpx;
  height: 160rpx;
  margin: 15rpx;
}

.save {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: .7rem;
  color: #fff;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
}
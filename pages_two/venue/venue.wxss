page {
  background: #3274e5;
}

.container {
  min-height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.acitveinfo {
  display: flex;
  flex-direction: column;
  width: 88%;
  margin: 40rpx 0;
}

.acitveinfo .item {
  font-size: 28rpx;
  font-weight: bold;
  color: #FFF;
  margin-bottom: 20rpx;
}

.notice {
  width: 600rpx;
  background: #6d99e4;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  font-size: 28rpx;
  border-radius: 5rpx;
}

.notice text {
  color: #FFF;
  margin-top: 10rpx;
  margin-right: 10rpx;
  padding-left: 5rpx;
  padding-top: 5rpx;
}

.swiper_container_move {
  height: 55rpx;
  line-height: 55rpx;
  width: 600rpx;
}

.swiper_item_move {
  font-size: 25rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  letter-spacing: 2px;
  color: #FFF;
}


.companylist {
  width: 94%;
  background: #6d99e4;
  border-radius: 15rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding-bottom: 30rpx;
}

.companylist .jobitem {
  width: 330rpx;
  height: 450rpx;
  background: #FFF;
  border-radius: 5rpx;
  margin: 100rpx 10rpx 10rpx 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 100rpx;
  position: relative;
}

.companylist .jobitem .jobtitle {
  font-size: 28rpx;
  font-weight: bold;
  color: #000;
  width: 300rpx;
}

.jobitem .img {
  width: 150rpx;
  height: 150rpx;
  position: absolute;
  border: 8rpx solid #FFF;
  border-radius: 50%;
  left: 90rpx;
  top: -88rpx;
}

.joblist {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 300rpx;
  margin-top: 20rpx;
  justify-content: space-between;
}

.joblist .title {
  width: 140rpx;
  font-size: 28rpx;
  margin-right: 7rpx;
  display: flex;
  flex-direction: row;
}

.joblist .title view:nth-child(1) {
  width: 10rpx;
  height: 10rpx;
  border-radius: 100%;
  background: #cd4a52;
  align-self: center;
  margin-right: 5rpx;
}



.jobcount {
  width: 280rpx;
  border-radius: 10rpx;
  border: 1rpx solid #dfcbcd;
  color: #cd4a52;
  font-size: 28rpx;
  padding: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 30rpx;
}

.sendjob {
  width: 250rpx;
  color: #FFF;
  height: 70rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ef3633;
  border-radius: 5rpx;
  margin-top: 30rpx;
}
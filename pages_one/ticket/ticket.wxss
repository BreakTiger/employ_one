page {
  background-color: #ececec;
}

.container {
  width: 84%;
  background-color: #fff;
  margin: 8% 8% 0;
  border-radius: 40rpx;
  overflow: hidden;
}

.header {
  padding-top: 50rpx;
}

.header image {
  width: 80%;
  height: 60rpx;
  margin: 0 auto;
}

.header view {
  font-size: 40rpx;
  text-align: center;
  color: #fff;
  margin: 40rpx 0;
}

.main {
  width: 90%;
  margin: 20rpx 0;
}

.title {
  font-weight: bold;
  font-size: 32rpx;
  margin-bottom: 15rpx;
}

.time {
  font-size: 24rpx;
}

.btn>view {
  width: 40%;
  height: 60rpx;
  line-height: 60rpx;
  color: #3274e5;
  border: 1rpx solid #3274e5;
  text-align:center;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}


page {
  background-color: #ececec;
}

.container {
  width: 84%;
  background-color: #fff;
  margin: 8% 8% 0;
  border-radius: 40rpx;
  overflow: hidden;
}

.header {
  padding-top: 50rpx;
}

.header image {
  width: 80%;
  height: 60rpx;
  margin: 0 auto;
}

.header view {
  font-size: 40rpx;
  text-align: center;
  color: #fff;
  margin: 40rpx 0;
}

.main {
  padding: 20rpx 40rpx;
}

.main image {
  display: flex;
  justify-content: center;
  width: 500rpx;
  height: 500rpx;
  margin: 0 auto;
}

.main_text {
  text-align: center;
  font-size: 40rpx;
  color: red;
}

.content {
  font-size: 28rpx;
  padding: 20rpx 0;
  color: #666;
}

.content view {
  padding: 10rpx 0;
}

.resume {
  font-size: 30rpx;
  align-items: center;
}

.resume button {
  width: 180rpx;
  height: 60rpx;
  line-height: 56rpx;
  font-size: 26rpx;
  margin: 0;
  background-color: #3274e5;
  color: #fff;
  border: 0;
}
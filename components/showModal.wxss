.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 580rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #FFFFFF url(https://zqrsjjz.jiahangit.com.cn/zqhr/zqhrimg/appEnterprise/bg.png) no-repeat;
  background-size: 100% 222rpx;/*按比例缩放*/
  margin: -325rpx 80rpx;
  border-radius: 25rpx;
}

.modal-title {
  padding-top: 82rpx;
  font-size: 45rpx;
  color: #fff;
  text-align: center;
}

.modal-content {
  padding: 100rpx 81rpx 50rpx;
  text-align: center;
  font-size: 30rpx;
}
.modal-content .txt {
  font-size: 36rpx;
  font-weight: 600;
  margin: 20rpx 0;
}
.modal-footer{
  margin-bottom: 40rpx;
}
.modal-footer view{
  font-size: 25rpx;
  text-align: center;
  width: 80%;
  margin-left: 10%;
  border-radius: 5rpx;
  height: 70rpx;
  line-height: 70rpx;
}

.btn-cancel {
  color: #666;
  text-align: center;
}

.btn-confirm {
  color: #fff;
  background-color: #3274E5;
}
.cancel{
  position: absolute;
  top: 23rpx;
  right:22rpx;
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  border-radius: 50%;
  background-color: #EFEFEF;
  color: #fff;
  text-align: center;
  opacity: 0.8;
  font-size: 42rpx;
}
.colr{
  color: red;
}